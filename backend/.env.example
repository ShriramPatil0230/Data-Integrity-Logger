# Data Integrity Logger - Backend Environment Variables
# Copy this file to .env and fill in your values

# Environment Mode (development | production)
NODE_ENV=development

# Server Port
PORT=4000

# MongoDB Connection URI
# Development: local MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/data-integrity-logger
# Production: MongoDB Atlas example
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (REQUIRED)
# Generate with: openssl rand -hex 32
# MUST be a strong, random string (minimum 32 characters)
JWT_SECRET=change-me-to-a-strong-random-secret

# Integrity Secret (REQUIRED)
# Generate with: openssl rand -hex 32
# MUST be different from JWT_SECRET
INTEGRITY_SECRET=change-me-to-a-different-strong-random-secret

# Maximum text entry size in bytes (default: 65536 = 64KB)
MAX_TEXT_LENGTH=65536

# Maximum HTTP request body size (default: 128KB)
MAX_REQUEST_BYTES=128kb
